[program:eidr]
command=meteor node {{ eidr_prefix }}/bundle/main.js
environment=HOME="/home/{{ eidr_user }}",METEOR_DB_NAME="{{ meteor_db_name }}",MONGO_URL="{{ meteor_mongo }}",PORT="{{ meteor_port }}",ROOT_URL="{{ apache_url }}",METEOR_SETTINGS='{"public":{"analytics_api_key":"{{analytics_api_key}}"},"google_oauth_client_id":"{{google_oauth_client_id}}","google_oauth_client_secret":"{{google_oauth_client_secret}}"}'
directory={{ eidr_prefix }}
user={{ eidr_user }}
numprocs=1
autostart=true
autorestart=true
startsecs=10
logfile_maxbytes=150MB
logfile_backups=10
loglevel=info
